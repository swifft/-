  width: 100%;
  height: 100%;
}
.btn {
  width: 80%;
  height: 50px;
  margin: 20px auto;
  text-align: center;
  border-radius: 20px;
  background-color: #ffffff;
  line-height: 50px;
  box-shadow: 0 5px 10px 5px #cccccc;
  font-size: 18px;
}

