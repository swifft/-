.form-box .upload {
  padding: 20px 0;
}
.form-box .upload .title {
  font-size: 16px;
  font-weight: 500;
  font-family: Arial, Helvetica, sans-serif;
  padding: 5px;
}
.form-box .upload .main {
  width: 100px;
  height: 100px;
  margin: 10px 0;
}
.form-box .upload .main .bg {
  width: 100%;
  height: 100%;
  position: relative;
}
.form-box .upload .main .bg image {
  width: 100%;
  height: 100%;
}
