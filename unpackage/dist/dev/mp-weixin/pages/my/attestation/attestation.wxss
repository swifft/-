  position: absolute;
  right: 20px;
  top: 10px;
  width: 20px;
  height: 20px;
}
.form-box .name .check-success image {
  width: 100%;
  height: 100%;
}
.form-box .name .check-fail {
  position: absolute;
  right: 20px;
  top: 10px;
  width: 20px;
  height: 20px;
}
.form-box .name .check-fail image {
  width: 100%;
  height: 100%;
}
.form-box .name input {
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  padding: 10px;
  font-size: 18px;
  margin: 15px 0;
}
.form-box .schoolnumber {
  position: relative;
}
