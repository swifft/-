<view class="box" style="{{'height:'+(phoneHeight+'px')+';'}}"><view class="form-box"><view class="name"><input type="text" placeholder="姓名" data-event-opts="{{[['input',[['__set_model',['$0','name','$event',[]],['form']],['name_check',['$event']]]]]}}" value="{{form.name}}" bindinput="__e"/><view hidden="{{!(name_check_success)}}" class="check-success"><image src="../../../static/my/success.png"></image></view><view hidden="{{!(name_check_fail)}}" class="check-fail"><image src="../../../static/my/fail.png"></image></view></view><view class="schoolnumber"><input type="text" placeholder="教职工号/学号" data-event-opts="{{[['input',[['__set_model',['$0','schoolnumber','$event',[]],['form']],['schoolnumber_check',['$event']]]]]}}" value="{{form.schoolnumber}}" bindinput="__e"/><view hidden="{{!(schoolnumber_check_success)}}" class="check-success"><image src="../../../static/my/success.png"></image></view><view hidden="{{!(schoolnumber_check_fail)}}" class="check-fail"><image src="../../../static/my/fail.png"></image></view></view><view class="upload"><view class="title">上传证件照</view><view class="main"><view class="bg"><image src="{{previewImg}}"></image><view data-event-opts="{{[['tap',[['close',['$event']]]]]}}" hidden="{{!(ishidden)}}" class="delete" bindtap="__e"><image src="../../../static/my/delete.png"></image></view><view data-event-opts="{{[['tap',[['upload',['$event']]]]]}}" hidden="{{!(isshow)}}" class="icon" bindtap="__e"><image src="../../../static/my/add.png"></image></view></view></view></view></view><view data-event-opts="{{[['tap',[['submit',['$event']]]]]}}" class="btn" bindtap="__e">提交</view></view>