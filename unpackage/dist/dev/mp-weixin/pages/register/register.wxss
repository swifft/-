.cover {
  width: 100%;
  height: 100%;
  background-color: rgba(39, 40, 50, 0.6);
  background-size: cover;
}
.title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding-top: 300rpx;
}
.title .title-top {
  height: 80rpx;
  font-size: 56rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  color: #f4f4f4;
  font-weight: 500;
  line-height: 80rpx;
}
.form {
  padding: 50rpx 100rpx;
}
.form .public {
  margin-top: 30rpx;
}
.form .public .form-title {
  font-size: 36rpx;
  color: rgba(244, 244, 244, 0.8);
}
.form .public .form-input {
  margin-top: 20rpx;
  position: relative;
}
.form .public .form-input input {
  padding: 2px 35px 2px 6px;
  color: #f4f4f4;
  border-bottom: 1px solid rgba(244, 244, 244, 0.9);
}
.form .public .form-input .success {
  width: 30px;
  height: 30px;
  position: absolute;
  right: 0;
  top: 0;
}
.form .public .form-input .success image {
  height: 100%;
  width: 100%;
}
.form .public .form-input .fail {
  width: 30px;
  height: 30px;
  position: absolute;
  right: 0;
  top: 0;
}
.form .public .form-input .fail image {
  height: 100%;
  width: 100%;
}
.form .radio {
  margin-top: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.form .radio .radio-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}
.form .radio .popup_title {
  text-align: center;
  font-size: 48rpx;
}
.form .radio .popup_main {
  padding: 0 15px;
}
.form .btn-box {
  height: 70rpx;
  -webkit-border-radius: 18rpx;
          border-radius: 18rpx;
  margin: 60rpx 0;
  background-color: #5799ff;
}
.form .btn-box .btn {
  height: 100%;
  line-height: 60rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: 400;
  color: white;
}

