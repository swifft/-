.list-box {
  width: 80%;
  height: 500rpx;
  margin: 40rpx auto;
  background: #ffffff;
  padding: 20rpx 50rpx;
  border-radius: 40rpx;
  box-shadow: 0 3px 10px 0 rgba(0, 0, 0, 0.3);
}
.list-box .list-box-title {
  width: 100%;
  height: 120rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.list-box .list-box-title .left .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.list-box .list-box-title .left .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.list-box .list-box-title .right {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  margin-left: 30rpx;
}
.list-box .list-box-title .right .name {
  font-size: 36rpx;
  font-family: 'Microsoft YaHei';
}
.list-box .list-box-title .right .time {
  color: rgba(0, 0, 0, 0.4);
}
.list-box .list-box-content {
  height: 180rpx;
  margin-top: 20rpx;
  text-indent: 2em;
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.list-box .list-box-more {
  margin-top: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  font-size: 34rpx;
  color: #9ec0ea;
  cursor: pointer;
}
.list-box .list-box-footer {
  width: 100%;
  height: 60rpx;
  margin-top: 60rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.list-box .list-box-footer image {
  width: 40rpx;
  height: 40rpx;
}
.list-box .popupBox {
  width: 80%;
  height: 80px;
  background-color: #ffffff;
  border-radius: 14px;
}
.list-box .popupBox .top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  font-weight: 500;
  font-family: "楷体";
  padding: 10px 0;
  font-size: 20px;
}
.list-box .popupBox .title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  font-weight: 500;
  padding: 10px 0;
  font-size: 16px;
}
.list-box .popupBox .btn {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  padding: 10px;
}

